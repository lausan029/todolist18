<h1>Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_tasks.each do |user_task| %>
      <tr>
        <td><%= user_task.task.name %></td>
        <td><%= user_task.task.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

